<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_integrantes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6600"
    tools:context=".Index"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnProduto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_controlapet" />


    <Button
        android:id="@+id/btnColaboradores"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="#fff"
        android:text="Colaboradores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSobreNos"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSobreNos"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="#fff"
        android:text="Sobre nÃ³s"
        app:layout_constraintBottom_toTopOf="@+id/btnColaboradores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProduto"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnProduto"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:background="#fff"
        android:text="Nosso Produto"
        app:layout_constraintBottom_toTopOf="@+id/btnSobreNos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>